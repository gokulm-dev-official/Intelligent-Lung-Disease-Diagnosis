{
    "version": 2,
    "public": true,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/reports/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "framework": "vite",
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist"
}